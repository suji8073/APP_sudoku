<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".play_menu">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:background="#DA6AED">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center"
                android:layout_marginTop="8dp"
                android:text='"Brain Healing"'
                android:textColor="#FFFFFF"
                android:textSize="35sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/view_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text=" Suji 님"
                    android:textColor="#FFFFFF"
                    android:textSize="28sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/percent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="0/100%"
                    android:textColor="#F6F6AF"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/user_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="고단한 하루, '복잡한 머리속을 힐링'시켜주는!\n'머리가 좋아지는' 여러가지 방법들을 추가해보았습니다 :)\n 오늘도 좋은 하루 보내세요!"
                android:textColor="#FFFFFF" />
        </LinearLayout>

    </FrameLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/food"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/main_menu"
                android:drawableLeft="@drawable/icon_finish"
                android:paddingLeft="10dp"
                android:text="두뇌에 좋은 음식" />

            <Button
                android:id="@+id/move"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/main_menu"
                android:drawableLeft="@drawable/icon_finish"
                android:paddingLeft="10dp"
                android:text="건강한 뇌를 위한\n활동" />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/music"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/main_menu"
                android:drawableLeft="@drawable/icon_finish"
                android:paddingLeft="10dp"
                android:text="머리를 맑게 해줄\nMUSIC PLAY" />


            <Button
                android:id="@+id/game"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/main_menu"
                android:drawableLeft="@drawable/icon_finish"
                android:paddingLeft="10dp"
                android:text="두뇌 트레이닝 \n 게임 스도쿠" />
        </TableRow>
    </TableLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#DA6AED">
        <Button
            android:layout_margin="5dp"
            android:id="@+id/app_finish"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@drawable/main_btn"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#FFFFFF"
            android:text="FINISH" />

    </FrameLayout>

</LinearLayout>

